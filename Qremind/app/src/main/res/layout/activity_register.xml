<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#efefef">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/FirstName_editText"
                android:hint="@string/hint_fname"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/fname_textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:maxLines="1"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/LastName_editText"
                android:hint="@string/hint_lname"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/lname_textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:maxLines="1"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/Phone_editText"
                android:hint="@string/hint_phone_no"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/phonenumber_textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:phoneNumber="true"
                android:maxLines="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress|text"
                android:ems="10"
                android:id="@+id/Email_editText"
                android:hint="@string/hint_email"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/email_textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:maxLines="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/Password_editText"
                android:hint="@string/hint_password"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/password_textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:password="true"
                android:maxLines="1"
                android:inputType="text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/ConfirmPassword_editText"
                android:hint="@string/hint_confirmpassword"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/confirmpassword_textView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:password="true"
                android:maxLines="1"
                android:inputType="text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_first_name"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/fname_textView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_last_name"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/lname_textView"
                android:layout_below="@+id/FirstName_editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_phone_no"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/phonenumber_textView"
                android:layout_below="@+id/LastName_editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_email"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/email_textView"
                android:layout_below="@+id/Phone_editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_password"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/password_textView"
                android:layout_below="@+id/Email_editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_confimed_pwd"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/confirmpassword_textView"
                android:layout_below="@+id/Password_editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/text_role"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/roleRadioGroup_textView"
                android:layout_below="@+id/ConfirmPassword_editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <RadioGroup android:id="@+id/Role_RadioGroup"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/roleRadioGroup_textView"
                android:checkedButton="@+id/customer_radiobtn"
                android:layout_marginBottom="20dp">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_customer"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:id="@+id/customer_radiobtn"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_vendor"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:id="@+id/vendor_radiobtn"/>
            </RadioGroup>

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_register"
                android:id="@+id/Register_button"
                android:layout_gravity="center_horizontal"
                android:background="#02bbd2"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/Role_RadioGroup"/>
            </RelativeLayout>
    </ScrollView>

</RelativeLayout>