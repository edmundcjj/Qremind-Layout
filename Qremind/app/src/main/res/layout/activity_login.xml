<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.example.chowdi.qremind.LoginActivity"
              android:background="#efefef">

    <!-- Login progress -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/qremind_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="40dp"/>

            <AutoCompleteTextView
                android:id="@+id/email_login_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView5"
                android:hint="@string/hint_email_hp_no"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/password_login_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:imeActionId="@+id/login"
                android:imeOptions="actionUnspecified"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_below="@+id/email_login_ET"
                android:layout_marginBottom="25dp"/>

            <Button
                android:id="@+id/cust_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_login_ET"
                android:text="@string/text_cust_login"
                android:textStyle="bold"
                android:background="#02bbd2"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/vendor_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cust_login_btn"
                android:text="@string/text_vendor_login"
                android:textStyle="bold"
                android:background="#02bbd2" />

        </RelativeLayout>
    </ScrollView>



</RelativeLayout>
